<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/next_button">

        <LinearLayout android:id="@+id/top_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/central_view"
            android:orientation="vertical"
            >

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <View android:id="@+id/central_view"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"

            />

        <LinearLayout android:id="@+id/bottom_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/central_view"
            android:orientation="vertical"
            >

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                />

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

            <arnaud.radomlearner.ElementToMatchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <Button android:id="@+id/next_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="NEXT"
        />

</RelativeLayout>