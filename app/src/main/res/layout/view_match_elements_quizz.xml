<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout android:id="@+id/top_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/central_view"
        >

        <arnaud.radomlearner.ElementToMatchView
            android:id="@+id/top_element_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <arnaud.radomlearner.ElementToMatchView
            android:id="@+id/top_element_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

        <arnaud.radomlearner.ElementToMatchView
            android:id="@+id/top_element_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <View android:id="@+id/central_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"

        />

    <LinearLayout android:id="@+id/bottom_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/central_view"
        >

        <arnaud.radomlearner.ElementToMatchView
            android:id="@+id/bottom_element_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <arnaud.radomlearner.ElementToMatchView
            android:id="@+id/bottom_element_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            />

        <arnaud.radomlearner.ElementToMatchView
            android:id="@+id/bottom_element_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</RelativeLayout>